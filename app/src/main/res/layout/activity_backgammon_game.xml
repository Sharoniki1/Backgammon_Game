<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackgammonGameActivity"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/backgammonGame_IMG_backgammonboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/img_backgammonboard2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:scaleType="fitXY"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/backgammongame_RCV_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity= "center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/backgammongame_BTN_rolldice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:text="Roll dice"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <ImageView
                        android:id="@+id/backgammongame_IMG_yellowback1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/img_yellowback"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/backgammongame_IMG_yellowback2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/img_yellowback"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity= "center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity= "center"
                        android:orientation="vertical">

                        <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/backgammongame_IMG_dice1"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/img_dice1" />

                        <View
                            android:layout_width="3dp"
                            android:layout_height="20dp"/>
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/backgammongame_IMG_dice2"
                            android:layout_marginBottom="1dp"
                            android:src="@drawable/img_dice2"/>

                </LinearLayout>
        </LinearLayout>
   </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>